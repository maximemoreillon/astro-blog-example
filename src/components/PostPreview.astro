---
export interface Props {
  title: string
  description: string
  url: string | undefined
}

const { title, description, url } = Astro.props
---

<a class="article-preview" href={url}>
  <h2>{title}</h2>
  <p>{description}</p>
</a>

<style>
  .article-preview {
    border: 1px solid #dddddd;
    padding: 0.5em;
    text-decoration: none;
    color: inherit;
  }
</style>
